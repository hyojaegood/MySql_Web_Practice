<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.edu"> 

	<select id="getUserlist"
	resultType="com.ssafy.edu.dto.UserDto">
		 SELECT USER_ID, NAME, PASSWORD FROM user_info
         ORDER BY USER_ID
	</select>

    <select id="getUserById" parameterType="java.lang.String"
	resultType="com.ssafy.edu.dto.UserDto">
		 SELECT USER_ID, NAME, PASSWORD FROM user_info
         WHERE USER_ID=#{user_id}
	</select>
	<insert id="addUser" parameterType="com.ssafy.edu.dto.UserDto">
	  INSERT INTO user_info(USER_ID, NAME, PASSWORD)
      VALUES(#{user_id}, #{name}, #{password})
	</insert>
	<update id="updateUser" parameterType="com.ssafy.edu.dto.UserDto">
	  UPDATE user_info SET 
      NAME=#{name} , PASSWORD= #{password}  WHERE USER_ID=#{user_id}
	</update>
	<delete id="deleteUser" parameterType="java.lang.String">
	  DELETE FROM user_info WHERE USER_ID=#{user_id}
	</delete>
	
		<select id="getUserlike" parameterType="java.lang.String"
	resultType="com.ssafy.edu.dto.UserDto">
		 SELECT USER_ID, NAME, PASSWORD FROM user_info
         WHERE NAME LIKE CONCAT('%',#{name},'%')
	</select>
	
	
	<select id="userlogin" parameterType="com.ssafy.edu.dto.UserDto"
	resultType="com.ssafy.edu.dto.UserDto">
		 SELECT USER_ID, NAME FROM user_info
         WHERE USER_ID=#{user_id} AND PASSWORD= #{password}
	</select>
	
	
	
	
 </mapper>
