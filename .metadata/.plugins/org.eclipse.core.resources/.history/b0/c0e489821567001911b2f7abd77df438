package com.ssafy.edu.dao;

import java.util.List;

import com.ssafy.edu.dto.FoodDto;
import com.ssafy.edu.dto.FoodItemDto;

public interface IFoodItemDao {
	public List<FoodItemDto> getFoodItemList() throws Exception;
	public void addFoodItem(FoodDto dto) throws Exception;
	public List<FoodItemDto> getFoodListByName(String name) throws Exception;
	public List<FoodItemDto> getFoodListByManufacturer(String man) throws Exception;
	public List<FoodItemDto> getFoodListByMaterial(String mat) throws Exception;
	public void deleteFood(int foodNum) throws Exception;
	public void updateFood(int foodNum) throws Exception;
}
